<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<bean id="jdbcUserRepository" class="ie.cit.adf.domain.dao.JdbcUserRepository">
		<constructor-arg ref="dataSource" />
	</bean>

	<bean class="ie.cit.adf.services.UserServiceImpl">
		<constructor-arg ref="jdbcUserRepository" />
	</bean>
	
	<bean id="jdbcLinkRepository" class="ie.cit.adf.domain.dao.JdbcLinkRepository">
		<constructor-arg ref="dataSource" />
	</bean>

	<bean class="ie.cit.adf.services.LinkServiceImpl">
		<constructor-arg ref="jdbcLinkRepository" />
	</bean>

	<bean id="jdbcBoardRepository" class="ie.cit.adf.domain.dao.JdbcBoardRepository">
		<constructor-arg ref="dataSource" />
	</bean>

	<bean class="ie.cit.adf.services.BoardServiceImpl">
		<constructor-arg ref="jdbcBoardRepository" />
	</bean>

	<jdbc:embedded-database id="dataSource" type="H2">
		<jdbc:script location="classpath:db-schema.sql" />
	</jdbc:embedded-database>

	<bean id="org.h2.tools.Server-WebServer" class="org.h2.tools.Server"
		factory-method="createWebServer" init-method="start" lazy-init="false"
		destroy-method="stop" depends-on="dataSource">
		<constructor-arg value="-web,-webPort,8082" />
	</bean>

	<bean class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

</beans>
